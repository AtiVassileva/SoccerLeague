@model IEnumerable<SoccerLeague.Data.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.League)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Host)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HostGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.League.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Host.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arena.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HostGoals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestGoals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
