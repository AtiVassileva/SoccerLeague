@using SoccerLeague.UI.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LeagueResponseModel

@{
    ViewData["Title"] = "League Details";
}

<h1>@Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogoUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.LogoUrl" width="250" height="200" alt=""/>
        </dd>
    </dl>
</div>
<div>
    @if (Model.AuthorId == User.GetId())
    {
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    }
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>